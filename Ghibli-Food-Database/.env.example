# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ghibli_food_db
DB_USER=postgres
DB_PASSWORD=password

# Application Configuration
NODE_ENV=development
PORT=3000
ADMIN_PORT=3001

# Security Configuration
JWT_SECRET=ghibli-food-db-secret-key-change-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Rate Limiting Configuration
MAX_CONNECTIONS_ALERT=80
SLOW_QUERY_THRESHOLD=1000
DISK_USAGE_ALERT=85
ERROR_RATE_ALERT=10

# Email Configuration (Optional - for monitoring alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Ghibli Food DB <your-email@gmail.com>

# Alert and Report Emails (Optional)
ALERT_EMAIL=admin@example.com
REPORT_EMAIL=reports@example.com

# Logging Configuration
LOG_LEVEL=info

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true